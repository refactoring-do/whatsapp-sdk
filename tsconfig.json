{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "baseUrl": "./src",
    "rootDir": "./src",
    "declaration": true,
    "outDir": "./lib",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": false
  },
  "include": ["src", "index.ts"],
  "exclude": ["node_modules", "tests", "example"]
}
